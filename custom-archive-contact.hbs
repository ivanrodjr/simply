{{!-- Layout --}}
{{!< default}}

{{!-- Class for <body> --}}
{{#contentFor "special_body_class"}}archive-contact u-bgWhite{{/contentFor}}

<div class="u-container u-marginBottom40">
    <article class="u-marginAuto u-paddingTop30 u-maxWidth1000 animated bounceInUp">
        {{#post}}
            <header class="u-marginAuto u-maxWidth740 u-marginBottom40 u-paddingBottom10 u-textAlignCenter">
                <h1 class="u-marginBottom30 u-fontSize22 u-fontWeightNormal u-textColorNormal">{{title}}</h1>
                {{#if custom_excerpt}}<p class="u-fontSizeLargest u-fontWeightSemibold u-md-fontSizeLarger">{{custom_excerpt}}</p>{{/if}}
            </header>

            {{!-- Content --}}
            {{content}}
        {{/post}}
    </article>
</div>

