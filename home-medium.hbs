{{!-- Layout --}}
{{!< default}}

{{!-- custom Styles For tag <body> --}}
{{#contentFor "special_body_class"}}is-home is-frontpage{{/contentFor}}

<section class="homeHero">
    <div class="homeHero-container u-container u-marginTop30 u-marginBottom30 u-flex u-relative">

        {{!-- Fisrt Large Post - partials/home/home-first-post.hbs --}}
        {{#foreach posts limit="1"}} {{> "home/home-first-post"}} {{/foreach}}

        {{!-- medium Post small - partials/home/home-small-post.hbs --}}
        <div class="homeHero-smallCardWrap u-flexColumnTop">
            {{#foreach posts from="2" to="4"}} {{> "home/home-small-post"}} {{/foreach}}
        </div>

        {{!-- Featured Post medium - partials/home/home-medium-post.hbs --}}
        {{#get "posts" include="tags,authors" filter="featured:true" limit="1" as |home_featured_post|}}
            {{#if home_featured_post}}{{#foreach home_featured_post}} {{> "home/home-medium-post"}} {{/foreach}}{{/if}}
        {{/get}}
    </div>
</section>

<section class="feed-entry-content u-container u-marginTop30">
    {{!-- Ad - partials/ad/ad-home-top.hbs --}}
    {{> "ad/ad-home-top"}}

    <div class="feed-entry-wrap u-maxWidth1100 u-marginAuto">
        <div class="row">
            {{#foreach posts from="5" to="12"}}
                {{!-- Story - partials/story/story-grid.hbs --}}
                <article class="story u-relative col s12 m6 {{#has number="5, 6"}}ss2{{else}}l4{{/has}}"> {{> "story/story-grid" }} </article>

                {{!-- ad --}}
                {{!-- {{#has number="6"}}<div class="col s12">{{> "ad/ad-home-medium"}}</div>{{/has}} --}}
                {{#has number="12"}}<div class="col s12">{{> "ad/ad-home-footer"}}</div>{{/has}}
            {{/foreach}}
        </div>
    </div>
</section>