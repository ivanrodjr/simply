<aside class="sidebar col u-hide-before-lg u-flexColumnTop">
    <div class="sticky-top-wrap u-flexColumnTop">
        <div class="sticky">
            {{!-- Add Post Recents --}}
            {{#is "home"}}
                {{#get "posts" filter="featured:true" limit="4" as |sidebar_featured_post| }}
                    {{#if sidebar_featured_post}}
                        {{> "sidebar/sidebar-post" widgetTitle=(t "Featured Articles") widgetPosts=sidebar_featured_post }}
                    {{/if}}
                {{/get}}
            {{else}}
                {{#get "posts" limit="4" as |sidebar_latest_post| }}
                    {{> "sidebar/sidebar-post" widgetTitle=(t "Latest Articles") widgetPosts=sidebar_latest_post }}
                {{/get}}
            {{/is}}


            {{!-- Tag Cloud - partials/sidebar/sidebar-tag-cloud.hbs --}}
            {{> "sidebar/sidebar-tag-cloud"}}

            {{!-- ad --}}
            {{> "ad/ad-sidebar"}}
        </div>
    </div>
</aside>
